<h1>Listing schools</h1>

<table>
  <tr>
    <th>School</th>
    <th>Name</th>
    <th>Creator</th>
    <th>Modifier</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%= school.school_id %></td>
    <td><%= school.name %></td>
    <td><%= school.creator %></td>
    <td><%= school.modifier %></td>
    <td><%= link_to 'Show', cms_school_path(school) %></td>
    <td><%= link_to 'Edit', edit_cms_school_path(school) %></td>
    <td><%= link_to 'Destroy', cms_school_path(school), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New School', new_cms_school_path %>
