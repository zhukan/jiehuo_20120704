<h1>Listing areas</h1>

<table>
  <tr>
    <th>Area</th>
    <th>Name</th>
    <th>Creator</th>
    <th>Modifier</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @areas.each do |area| %>
  <tr>
    <td><%= area.area_id %></td>
    <td><%= area.name %></td>
    <td><%= area.creator %></td>
    <td><%= area.modifier %></td>
    <td><%= link_to 'Show', cms_area_path(area) %></td>
    <td><%= link_to 'Edit', edit_cms_area_path(area) %></td>
    <td><%= link_to 'Destroy', cms_area_path(area), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Area', new_cms_area_path %>
