    $(function() {
        $("input").inputTip();  // 调用inputTip方法
        $("input[type='button']").focus();  // 页面打开后焦点置于button上，也可置于别处。否则IE上刷新页面后焦点在第一个输入框内造成placeholder文字后紧跟光标现象
    });


</script>







